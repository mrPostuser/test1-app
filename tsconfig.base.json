{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true
    },
    "exclude": ["node_modules", "dist"]
  }